@model IEnumerable<GorevAtama.Models.TBL_GOREV>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    .table {
        border-style:solid;
    }
</style>
<h2>Mevcut Projeler</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZORLUK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TBL_PERSONEL.AD)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZORLUK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TBL_PERSONEL.AD)
        </td>
        <td>
            <a href="/Gorev/Edit/@item.ID"><i class="glyphicon glyphicon-edit"></i></a> |
            <a href="/Gorev/Delete/@item.ID"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
